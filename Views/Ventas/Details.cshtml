@model Comprobación.Models.Venta

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de venta</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaVenta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaVenta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalVenta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalVenta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ApellidoCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empleado.ApellidoEmpleado)
        </dd>
    </dl>
</div>
<div> 
    <a asp-action="Edit" asp-route-id="@Model?.IdVenta">Edit</a>  class="btn btn-outline-warning">
    <i class="bi bi-pencil-square"></i> Editar |
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Volver a la lista
    </a>
</div>
