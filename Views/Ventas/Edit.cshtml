@model Comprobación.Models.Venta

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar venta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenta" />
            <div class="form-group">
                <label asp-for="FechaVenta" class="control-label"></label>
                <input asp-for="FechaVenta" class="form-control" />
                <span asp-validation-for="FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdClienteEnVenta" class="control-label"></label>
                <select asp-for="IdClienteEnVenta" class="form-control" asp-items="ViewBag.IdClienteEnVenta"></select>
                <span asp-validation-for="IdClienteEnVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmpleadoEnVenta" class="control-label"></label>
                <select asp-for="IdEmpleadoEnVenta" class="form-control" asp-items="ViewBag.IdEmpleadoEnVenta"></select>
                <span asp-validation-for="IdEmpleadoEnVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalVenta" class="control-label"></label>
                <input asp-for="TotalVenta" class="form-control" />
                <span asp-validation-for="TotalVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Volver a la lista
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
